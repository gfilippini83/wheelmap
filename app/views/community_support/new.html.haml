.container-fluid
  .support-form
    %h1=t('community_support_form.new.form.title')
    %p=t('community_support_form.new.form.header_text_html')
    %ul
      %li=t('community_support_form.new.form.questions.a')
      %li=t('community_support_form.new.form.questions.b')
      %li=t('community_support_form.new.form.questions.c')
    %h5=t('community_support_form.new.form.note')
    = semantic_form_for(@support_request, :url => community_support_index_path ) do |f|
      = f.input :name
      = f.input :email, hint: ""
      = f.input :message, as: :text , label: I18n.t('community_support_form.new.form.describe')
      = f.action :submit, as: :button, label: I18n.t('community_support_form.new.form.submit_button')

= render :partial => 'shared/language_picker_styling'